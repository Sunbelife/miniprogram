

.type-wrap{
    border-bottom: 1rpx solid #ddd;
}

.type{
    /*width: 375rpx; -40 */
    width: 335rpx;
    text-align: center;
    display: inline-block;
    padding: 20rpx 0;
    margin: 0 20rpx;
    box-sizing: border-box;
}

.type.active{
    border-bottom: 5rpx solid red;
}

.blessing-item{
    padding: 10rpx 20rpx;
    border-bottom: 1rpx solid #ddd;
}

.blessing-content{

}
.blessing-time{
    text-align: right;
    color: rgba(117, 117, 117, 0.87);
    font-size: 20rpx;
}

.btns{
    text-align: right;
    margin-top: 15rpx;
    padding-top: 15rpx;
    border-top: 1px solid  #ddd;
}

.btn{
    width: 150rpx;
    /*height: 30rpx;*/
    line-height: 1.5;
    font-size: 30rpx;
    display: inline-block;
    background-color: rgba(248,49,70,.9);
    color: white;
    padding: 6rpx 15rpx;
    height: auto;
    box-sizing: border-box;
    border: 1px solid  rgba(248,49,70,.9);
}

.btn-blank{
    background-color:white;
    color:  rgba(248,49,70,.9);
    border: 1px solid  rgba(248,49,70,.9);
    margin-left: 25rpx;
}

.clearfix{
    clear: both;
}

.btn:after {
    display: none;
}

.tip{
    font-size: 30rpx;
    padding: 15rpx;
    margin: 5rpx;
    color: #8e8e8e;
    padding-left: 15rpx;
    border-bottom: 1px solid #ddd;
}