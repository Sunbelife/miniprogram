.bottomFixed{
    position: fixed;
    /*height: 1000rpx;*/
    bottom: 0;
    z-index: 3000;
    /*margin-bottom:600rpx;*/
    left: 0;
    width: 750rpx;
}

.saySomething{
    box-sizing: border-box;
    /*width: 100%;*/
    height: 80rpx;
    line-height: 80rpx;
    padding-left:50rpx;
    margin: 10rpx 30rpx 10rpx 30rpx;
    border: 1px solid #ddd;
    border-radius: 80rpx;
    margin-bottom: 30rpx;
    color: white;
    background: rgba(1,1,1,0.5);
    font-size: 26rpx;

}



.blessing-view{
    height: 80rpx;
    bottom: 150rpx;
    overflow: hidden;
}

.blessing-mask{
    height: 70rpx;
    background-image: linear-gradient(to bottom, rgba(255, 255, 255, .8), rgba(255, 255, 255, 0));

    position: absolute;
    top: 0;
    left: 0;
    width: 400rpx;
}

.blessing-wrap{
    bottom: 150rpx;

}

.blessing-space{
    height: 1rpx;
    width: 100%;
}
.blessing{
    box-sizing: border-box;
    height: 60rpx;
    line-height: 60rpx;
    display: inline-block;
    max-width: 690rpx;
    /*margin: 10rpx;*/
    margin-left: 30rpx;
    margin-right: 30rpx;
    margin-top: 10rpx;
    margin-bottom: 10rpx;

    border-radius: 60rpx;
    color: white;

    background: rgba(1,1,1,0.5);
    font-size: 26rpx;
    padding-left:20rpx;
    padding-right:20rpx;

    overflow:hidden;
    text-overflow:ellipsis;
    -o-text-overflow:ellipsis;
    white-space:nowrap;
}
