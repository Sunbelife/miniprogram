.bottomFixed{
    position: fixed;
    /*height: 1000rpx;*/
    bottom: 0;
    z-index: 3000;
    /*margin-bottom:600rpx;*/
    left: 0;
    width: 750rpx;
}

.saySomething{
    box-sizing: border-box;
    /*width: 100%;*/
    height: 80rpx;
    line-height: 80rpx;
    padding-left:30rpx;
    margin: 10rpx;
    border: 1px solid #ddd;
    border-radius: 15rpx;
    margin-bottom: 30rpx;

}



.blessing-view{
    height: 60rpx;
    bottom: 150rpx;
    overflow: hidden;
}

.blessing-mask{
    height: 60rpx;
    background-image: linear-gradient(to bottom, rgba(255, 255, 255, .8), rgba(255, 255, 255, 0));

    position: absolute;
    top: 0;
    left: 0;
    width: 400rpx;
}

.blessing-wrap{
    bottom: 150rpx;

}

.blessing{
    height: 60rpx;
    line-height: 60rpx;
    padding-left: 30rpx;
    width: 400rpx;
    overflow:hidden;
    text-overflow:ellipsis;
    -o-text-overflow:ellipsis;
    white-space:nowrap;
}
