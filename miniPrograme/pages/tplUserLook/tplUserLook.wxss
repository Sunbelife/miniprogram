.saySomething{
    box-sizing: border-box;
    /*width: 100%;*/
    height: 80rpx;
    line-height: 80rpx;
    padding-left:50rpx;
    margin: 10rpx 30rpx 10rpx 30rpx;
    border: 1px solid #ddd;
    border-radius: 80rpx;
    margin-bottom: 30rpx;
    color: white;
    background: rgba(1,1,1,0.5);
