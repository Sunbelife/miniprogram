}



.blessing-view{
    height: 80rpx;
    bottom: 150rpx;
    overflow: hidden;
}

.blessing-mask{
    height: 70rpx;
    background-image: linear-gradient(to bottom, rgba(255, 255, 255, .8), rgba(255, 255, 255, 0));

    position: absolute;
    top: 0;
    left: 0;
    width: 400rpx;
}

.blessing-wrap{
    /*bottom: 150rpx;*/

}

.blessing-space{
    height: 1rpx;
    width: 100%;
}
.blessing{
    box-sizing: border-box;
    height: 60rpx;
    line-height: 60rpx;
    display: inline-block;
    max-width: 690rpx;
    /*margin: 10rpx;*/
    margin-left: 30rpx;
    margin-right: 30rpx;
    margin-top: 10rpx;
    margin-bottom: 9rpx;
    border-bottom: 1px solid #ddd;

    border-radius: 60rpx;
    color: white;

    background: rgba(1,1,1,0.5);
    font-size: 26rpx;
    padding-left:20rpx;
    padding-right:20rpx;


}

.blessing-text{
    max-width: 620rpx;

    overflow:hidden;
    text-overflow:ellipsis;
    -o-text-overflow:ellipsis;
    white-space:nowrap;
}