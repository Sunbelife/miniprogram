.iconTitle{
    padding: 10rpx;
    font-size: 30rpx;
}
.bottomBtn{
    display: flex;
    justify-content:center;
    vertical-align: middle;
}
.bottomBtn .iconfont{
    margin-top: 8rpx;
    display: inline-block;
}
.makeBtn{
    display: inline-block;
    width: auto;
    padding: 0;
    margin: 0;
    background-color: transparent;
    border: none;
    line-height: normal;
    margin-left: 15rpx;
    font-size: inherit;
    color: white;

}
.guestReplyTipNum{
    display: inline-block;
    position: absolute;
    top: -15rpx;
    right: -15rpx;
    background: white;
    border-radius: 100%;
    width: 40rpx;
    height: 40rpx;
    line-height: 40rpx;
    color:  #f83146;
    font-size: 26rpx;
    text-align: center;
}

.makeBtn:after {
    display: none;
}

.item-time{
    height: 35rpx;
    line-height: 35rpx;
    text-align: center;
    font-size: 24rpx;
    border-bottom: 1rpx solid #ddd;
}

@keyframes shakeAnimation
{
    0% {transform: rotate(3deg)}
    50% {transform: rotate(0deg)}
    100% {transform: rotate(-3deg)}
}

.shake{
    animation: shakeAnimation .3s linear infinite;
}

.del-mask{
    /*background: rgba(1,1,1,.5);*/
    z-index: 1;
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    border: 1px solid #f83146;
}

.del-btn{
    background-color: #f83146;
    color: white;

    width: 40rpx;
    height: 40rpx;
    line-height: 40rpx;

    position: absolute;
    top: -20rpx;
    right: -20rpx;

    border-radius: 100%;
    text-align: center;
    font-size: 24rpx;
}

.tplWrap{
    padding-bottom: 150rpx;
}
.clearfix{
    clear: both;
}