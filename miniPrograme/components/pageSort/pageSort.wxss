


@import "../../css/tpl.wxss";
@import "../../css/app.wxss";

/*
    页面排序
*/
.pageSort{
    box-sizing: border-box;
    padding: 30rpx;
    position: fixed;
    width: 100%;
    bottom: 0;
    background-color: white;
    /*box-shadow: -2px -2px 5px #ddd;*/
    border-top:1px solid #ddd;
    z-index: 200;
}
.pageSort-title{
    position: relative;
}

.pageSort-title-close{
    position: absolute;
    top: 0;
    right: 0;
    color: #f83146;
    font-weight: bold;
}
.pageSort-item-wrap{
    margin-top:20rpx;
    width: 200rpx;
    box-sizing: border-box;
    height: 350rpx;

}
.pageSort-item{
    box-sizing: border-box;
    width: 180rpx;
    /* 894/(502/180) */
    height: 320rpx;



    display: inline-block;
    margin-right: 20rpx;
    position: relative;
}



.pageSort-item-img-wrap{
    width: 180rpx;
    height: 320rpx;
}

.pageSort-item-img-wrap.active{
    border: 1px solid #f83146;
}


.pageSort-item-img{
    width: 100%;
    height: 100%;
}
.pageSort-item-title{
    height: 50rpx;
    padding-top:10rpx;

    box-sizing: border-box;

    text-align: center;
}


.pageSort-item-drop{
    background-color: #f83146;
    width: 40rpx;
    height: 40rpx;
    line-height: 40rpx;
    border-radius: 40rpx;

    box-sizing: border-box;
    position: absolute;
    top: -15rpx;
    right: -15rpx;
    text-align: center;
    color: white;
}

.pageSort-item-drop .iconfont{
    font-size: 30rpx;
}