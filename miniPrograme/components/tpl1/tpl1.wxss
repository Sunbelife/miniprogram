


@import "../../css/tpl.wxss";
@import "../../css/app.wxss";

.icon-bottom{
    position: absolute;
    bottom: 40rpx;
    z-index: 100;
    font-size: 60rpx;
    left:50%;
    margin-left: -15rpx;
    text-align: center;
    transition: all .3s;

}

.icon-bottom.longScreen{
    bottom: 200rpx;
}

@keyframes rotateAnimate2
{
    0%   {transform: translateY(40rpx) rotate(180deg);
    opacity: 0.8}
    100% {transform:  translateY(0rpx) rotate(180deg);
        opacity: 1}
}

.icon-bottom.play{
    animation: rotateAnimate2 1.4s linear infinite;
}

.loading{
    position: absolute;
    top: 0;
    left: 0;
    width: 100vw;
    height: 5rpx;
    z-index: 1000;
}
.loading-process{
    position: absolute;
    top: 0;
    left: 0;
    width: 100vw;
    height: 5rpx;
    z-index: 1001;
    background: #248028;
    transition: all .3s;
}