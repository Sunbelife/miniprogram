@import "../../css/tpl.wxss";
@import "../../css/app.wxss";

.container{
    /*background-color: #222222;*/
    padding: 100rpx;
    box-sizing: border-box;

}

.button{
    background-color: #f2f3f7;
    height: 90rpx;
    line-height: 90rpx;
    text-align: center;
    color: #333333;
    flex: 1;
}

.button:nth-of-type(2){
    border-left: 1px solid #ddd;
}

.button-fixed{
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    display: flex;
}

.focusRectangleWrap{
    height: 100%;

}

.focusRectangle{
    width: 200rpx;
    height: 200rpx;
    /*background-color: yellow;*/

    position: absolute;
    margin: 2rpx;
    z-index: 100;

}


.focusRectangle-horn{
    width: 20rpx;
    height: 20rpx;
    /*background-color: red;*/
    position: absolute;
    border: 5px solid green;
}

.focusRectangle-horn-topLeft{
    top: -5rpx;
    left: -5rpx;
    border-right: none;
    border-bottom: none;
}


.focusRectangle-horn-topRight{
    top: -5rpx;
    right: -5rpx;
    border-left: none;
    border-bottom: none;
}


.focusRectangle-horn-bottomLeft{
    bottom: -5rpx;
    left: -5rpx;
    border-right: none;
    border-top: none;
}


.focusRectangle-horn-bottomRight{
    bottom: -5rpx;
    right: -5rpx;
    border-left: none;
    border-top: none;
}





movable-view {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100rpx;
    width: 100rpx;
    background: #283fad;
    color: #fff;
}

movable-area {
    height: 400rpx;
    width: 400rpx;
    margin-top: 50rpx;
    background-color: #ccc;
    /*overflow: hidden;*/
}

.showImg{
    display: block;
}

.max {
    width: 600rpx;
    height: 600rpx;
}

.page-section{
    width: 100%;
    margin-bottom: 60rpx;
    position: relative;
}

.page-section:last-child{
    margin-bottom: 0;
}

