


@import "../../css/tpl.wxss";
@import "../../css/app.wxss";

.container{
    /*background-color: #222222;*/
    padding: 10rpx;
    box-sizing: border-box;
    background: #101023;

}

.button{
    background-color: #f2f3f7;
    height: 90rpx;
    line-height: 90rpx;
    text-align: center;
    color: #333333;
    flex: 1;
}

.button:nth-of-type(2){
    border-left: 1px solid #ddd;
}

.button-fixed{
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    display: flex;
    z-index: 5000;
}

.focusRectangleWrap{
    height: 100%;

}

.focusRectangle{
    width: 200rpx;
    height: 200rpx;
    /*background-color: yellow;*/

    position: absolute;
    margin: 2rpx;
    z-index: 100;

}


